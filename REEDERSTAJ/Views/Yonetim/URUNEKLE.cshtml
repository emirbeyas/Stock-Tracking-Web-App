@model REEDERSTAJ.Models.URUNLER

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";

}

<h2>Create</h2>


@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>URUN EKLE</h4>
