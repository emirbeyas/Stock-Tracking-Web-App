<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/Yonetim.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        * {
            padding: 0;
            margin: 0;
        }

        body {
            background: white;
        }

        .header {
            background: black;
            width: 100%;
            height: 50px;
            position: fixed;
            z-index: 99;
        }

        .Sayfalar a {
            display: inline-block;
            font-family: Arial;
            color: white;
            text-decoration: none;
            font-size: 25px;
            margin-left: 10px;
            margin-right: 10px;
            vertical-align: bottom;
        }
    </style>


</head>
<body>

    <div class="header">
        <div class="logo" style="display:inline;">

            <a href="~/Yonetim/Index" style="margin:2px 3%; display:inline;"> <img src="~/IMG/logobeyaz.png" height="45px"> </a>

            <span class="Sayfalar">
                <a href="~/Yonetim/Kullanicilar">Kullanıcılar</a>
                <a href="~/Yonetim/Faturalar">Faturalar</a>
                <a href="~/Yonetim/Urunler">Ürünler</a>
            </span>

            <span class="Degistir" style="float:right; margin:-1px 3%;">
                <a href="~/Login/Index" style="color:white; margin:10px; font-size:30px; display:inline-block; text-decoration:none;">ADMİN</a>
                <a href="~/Home/Index" style="color:white; margin:10px; font-size:30px; display:inline-block; text-decoration:none;"><i class="fa fa-link"></i></a>
            </span>

        </div>
    </div>




    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>